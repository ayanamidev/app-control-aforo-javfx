<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="150" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.examendilaura.GestionAforoController">
  <HBox alignment="TOP_CENTER" spacing="30">
    <Label text="Número de plazas: "/>
    <TextField fx:id="numeroEntrada" promptText="60"/>
    <Button onAction="#onInicializarAforoButtonClick" text="Inicializar aforo"/>
  </HBox>
  <HBox alignment="CENTER" spacing="200">
    <VBox>
      <Label text="Aforo actual"/>
      <Label fx:id="aforoActualL" text="aforoactual"/>
    </VBox>
    <VBox>
      <Label  text="Aforo máximo"/>
      <Label fx:id="aforoMaximoL" text="aforomáximo"/>
    </VBox>
  </HBox>
  <HBox alignment="CENTER" spacing="200">
    <Button text="Entra"/>
    <Button text="Sale"/>
  </HBox>


</VBox>
